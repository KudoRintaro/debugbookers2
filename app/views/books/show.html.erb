<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @booknew %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image(80,80) %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <td>
          <% if @book.favorited_by?(current_user) %>
          <p>
            <%= link_to book_favorites_path(@book), method: :delete, class:"text-danger" do %>
            ♥<%= @book.favorites.count %>
            <% end %>
          </p>
          <% else %>
          <P>
            <%= link_to book_favorites_path(@book), method: :post, class:"text-primary" do %>
            ♡<%= @book.favorites.count %>
            <% end %>
          </P>
          <% end %>
        </td>
            <% if(@book.user==current_user) %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
            <% end %>
        </tr>
      </table>
      <table class="table-borderless">
       <% @book_comments.each do |book_comment| %>
       <% if book_comment.book_id==@book.id %>
       <tr>
        <td>
          <%= link_to user_path(book_comment.user) do %>
          <%= image_tag book_comment.user.get_profile_image(50,50) %><br>
          <%= book_comment.user.name %>
          <% end %>
        </td>
        <td><%= book_comment.comment %></td>
       </tr>
        <% end %>
        <% end %>
      </table>
      <div class="form-group">
      <%= form_with model: [@book, @book_comment] do |f| %>
      <%= f.text_area :comment, class:"form-control" %>
      <%= f.submit "送信" %>
      <% end %>
      </div>
    </div>
  </div>
</div>