<table class="table-borderless">
       <% book_comments.each do |book_comment| %>
       <% if book_comment.book_id==params[:id].to_i %>
       <tr>
        <td>
          <%= link_to user_path(book_comment.user) do %>
          <%= image_tag book_comment.user.get_profile_image(50,50) %><br>
          <%= book_comment.user.name %>
          <% end %>
        </td>
        <td><%= book_comment.comment %></td>
        <% if book_comment.user==current_user %>
        <td>
          <%= link_to book_book_comment_path(book_comment), method: :delete, remote: true do %>
          <button class="btn btn-danger btn-sm">Destroy</button>
          <% end %>
        </td>
        <% end %>
       </tr>
        <% end %>
        <% end %>
</table>